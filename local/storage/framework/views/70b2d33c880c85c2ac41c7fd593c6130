$(document).ready(function() {
    $.ajax({
        type: "POST",
        headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
        url: '<?php echo e(url("search_book")); ?>'
    });
    $.ajax({
        type: "POST",
        headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
        url: '<?php echo e(url("get_authors")); ?>'
    });
    $.slidebars();
});
