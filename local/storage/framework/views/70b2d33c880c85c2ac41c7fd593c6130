        <script>
            function loadmore() {
                $(".waiting").show()
            }
            function getgallery(id)
            {
                $(".waiting").show()
                $.ajax({
                    type: "POST",
                    url: '<?php echo e(url("/gallery")); ?>',
                    headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
                    data: {mode: "getgallery", id: id},
                    success: function(response)
                    {
                        $(".waiting").hide();
                        $("#galleria").html(response);
                        $("#photo_viewer").modal();
//                        Galleria.loadTheme('js/front/galleria.classic.min.js');
                        Galleria.run('#galleria', {
                            extend: function() {
                                var gallery = this;
                                $('#switch_gallery').click(function() {
                                    gallery.destroy();
                                });
                                $('#photo_viewer').on('hidden.bs.modal', function() {
                                    gallery.destroy();
                                })
                            }
                        });
                        Galleria.ready(function() {
                            this.attachKeyboard({
                                right: this.next,
                                left: this.prev
                            });
                        });
                    }
                });
            }
            function viewFullDetail(id)
            {
                $(".waiting").show()
                $.ajax({
                    type: "POST",
                    url: '<?php echo e(url("/view_full_detail")); ?>',
                    headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
                    data: {mode: "getgallery", id: id},
                    success: function(response)
                    {
                        $(".waiting").hide();
                        $("#viewmore_modal-body").html(response);
                        // Simply give your modal an id something like "thankyouModal"
                        $("#myModal2").modal();
                    }
                });
            }
            jQuery(document).ready(function($) {
                $('.close-carbon-adv').on('click', function(event) {
                    event.preventDefault();
                    $('#carbonads-container').hide();
                });
            });
            $('.post_ad_click').on('click', function() {
                $(".waiting").show()
                // Simple Ajax code to submit a form
                $.ajax({
                    type: "POST",
                    url: '<?php echo e(url("/post_ad")); ?>',
                    headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
                    success: function(result) {
                        $(".waiting").hide();
                        $("#modal-body").html(result);
                        // Simply give your modal an id something like "thankyouModal"
                        $("#myModal").modal();
                    }
                });
            });
            $(window).load(function() {
                // Animate loader off screen
                $(".se-pre-con").fadeOut("slow");
            });

            $(function() {
                $('.load_more').live("click", function() {
                    var getId = $(this).attr("id");
                    if (getId) {
                        $(".waiting").show()
                        $.ajax({
                            type: "POST",
                            url: "more_content",
                            data: "getLastContentId=" + getId,
                            cache: false,
                            headers: {'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')},
                            success: function(html) {
                                $(".waiting").hide();
                                $('.gap').remove();
                                $("#ullist ul").append(html);
                                $('#load_more_' + getId).remove();
                                $('.box').addClass("fadeInUp");
                                $('.box').css("visibility", "visible");
                            }});
                    } else {
                        $(".waiting").hide();
                        $(".more_tab").html('No more data available');
                    }
                    return false;
                });
            });

            //Scroll up
            $(function() {
                $.scrollUp({
                    animation: 'fade',
                    scrollImg: {
                        active: true,
                        type: 'background',
                        src: '.../images/front/top.png'
                    }
                });
            });
            $('.image-switch').addClass('active');

        </script>
    </body>
